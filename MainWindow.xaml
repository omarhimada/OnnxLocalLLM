<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="ONNX Chat" Width="800" Height="Auto" MaxHeight="1280" 
        Background="Black"
        WindowStyle="None"
        AllowsTransparency="False">
    <Window.Resources>
        <SolidColorBrush x:Key="TextBoxBorderNormal" Color="#333333"/>
        <Style x:Key="NoFocusBlueTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderNormal}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd"
                                    Property="BorderBrush"
                                    Value="{StaticResource TextBoxBorderNormal}"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd"
                                    Property="BorderBrush"
                                    Value="{StaticResource TextBoxBorderNormal}"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30" 
	                  ResizeBorderThickness="5" 
	                  CornerRadius="0"
	                  GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    <Border x:Name="Boundary" BorderThickness="1" BorderBrush="#333333">
        <Grid x:Name="OuterGrid" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="TitleBar" Grid.Row="0" Background="Black">
                <StackPanel x:Name="TitleBarPanel"  Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <!-- Currently invisible -->
                    <TextBlock x:Name="TitleBarText" Text="" Foreground="Gray" FontFamily="Cascadia Mono ExtraLight" FontSize="12"/>
                </StackPanel>
                <StackPanel x:Name="CloseButtonPanel" Orientation="Horizontal" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button x:Name="CloseButton" Content="✕" Width="45" Background="Transparent" Foreground="White" BorderThickness="0" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <Grid x:Name="ChatWrap" Grid.Row="1" Background="Black">
                <StackPanel Orientation="Vertical">
	                <StackPanel x:Name="UserInputWithButtons" Orientation="Vertical" HorizontalAlignment="Center" Background="Black">
		                <TextBox x:Name="UserInputText" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="" Width="800" Height="Auto" Padding="10" MinHeight="120" MaxHeight="490" Background="Black" FontFamily="Cascadia Mono ExtraLight" SelectionBrush="#FF474747" SelectionTextBrush="#FF89FFD9" Foreground="White" MaxLines="1729" FontSize="14" Margin="0,0,0,0" CaretBrush="White" AcceptsReturn="True" FocusVisualStyle="{x:Null}" Style="{StaticResource NoFocusBlueTextBox}" />
		                <StackPanel x:Name="ButtonsPanel"  Orientation="Horizontal" HorizontalAlignment="Center">
			                <Button x:Name="ChatButton" Content=" chat " 
			                        HorizontalAlignment="Left" Width="Auto" Height="25" 
			                        Background="#FF111111" Foreground="White" FontFamily="Cascadia Mono ExtraLight" FontSize="14"
			                        Click="ChatButtonClick" AutomationProperties.Name="ChatButton"/>

			                <Button x:Name="InterruptButton" Content=" interrupt " 
			                        HorizontalAlignment="Right" Width="Auto" Height="25"
			                        Background="#FF111111" Foreground="White" FontFamily="Cascadia Mono ExtraLight" FontSize="14" 
			                        Click="InterruptButtonClick" AutomationProperties.Name="InterruptButton" HorizontalContentAlignment="Center" />
		                </StackPanel>
	                </StackPanel>
	                <StackPanel x:Name="ResponseWrap" Background="Black" Margin="0,0,0,0">
		                <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center">
                            <TextBox x:Name="TheirResponse" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="" Width="800" Height="Auto" Padding="10" MaxHeight="920" Background="Black" FontFamily="Cascadia Mono ExtraLight" SelectionBrush="#FF474747" SelectionTextBrush="#FF89FFD9" Foreground="White" MaxLines="1729" FontSize="14" Margin="0,0,0,0" IsReadOnly="True" FocusVisualStyle="{x:Null}" Style="{StaticResource NoFocusBlueTextBox}" />
		                </StackPanel>
	                </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>